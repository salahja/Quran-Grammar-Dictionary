<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/space_2"
    android:paddingTop="@dimen/space_2"
    android:paddingRight="@dimen/space_2">

    <androidx.cardview.widget.CardView
        android:id="@id/cvBg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="2dp">



            <include layout="@layout/item_viewer_aya_header" />

            <TextView
                android:id="@id/quran_textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="16.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginBottom="16.0dip"
                android:focusable="false"
                android:textSize="20.0sp"
                android:visibility="visible" />

            <com.example.utility.FlowLayout
                android:id="@+id/flow_word_by_word"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16.0dip"
                android:visibility="visible" />

            <TextView
                android:id="@id/tvTranslation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingBottom="8.0dip"
                android:textSize="16.0sp" />
        </LinearLayout>

        <include layout="@layout/quran_tranlation_rows" />
    </androidx.cardview.widget.CardView>
</FrameLayout>