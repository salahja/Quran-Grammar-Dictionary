<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"

    android:orientation="vertical"
    android:paddingStart="6.0dip"
    android:paddingEnd="6.0dip"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <FrameLayout
        android:id="@+id/sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/bottom_sheet_behavior" />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"

        app:rippleColor="@color/colorAccent"
        app:strokeColor="@color/color_primary_variant"

        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="10dp"


        app:cardPreventCornerOverlap="false"
        app:strokeWidth="1dp">
    <RelativeLayout
        android:id="@id/containertop"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"



        android:orientation="horizontal">
        <TextView
            android:id="@id/nounname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_marginTop="15.0dip"
            android:layout_marginRight="15dp"
            android:text="Word"


            android:textSize= "16.0sp" />

    </RelativeLayout>

            <RelativeLayout
                android:id="@id/container"
                 android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"



                android:orientation="horizontal">


                <TextView
                    android:id="@id/chapterverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:layout_marginTop="15.0dip"
                    android:layout_marginRight="15dp"
                    android:text="Word"


                    android:textSize= "16.0sp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@id/arabicword"
                    android:layout_toEndOf="@id/chapterverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:visibility="gone"
                    android:lines="1"
                    android:layout_marginRight="15dp"
                    android:text="Word"


                    android:textSize= "16.0sp" />
                <com.google.android.material.chip.Chip
                    android:layout_weight="1"
                    android:id="@id/arabicwordpcpl"
                    android:visibility="gone"
                    android:layout_toEndOf="@id/chapterverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:lines="1"
                    android:layout_marginRight="15dp"
                    android:text="Word"


                    android:textSize= "16.0sp" />


                <TextView
                    android:layout_weight="1"
                    android:id="@id/meaning"
                    android:layout_toEndOf="@id/arabicword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:layout_marginRight="15dp"

                    android:text="Word"


                    android:textSize= "16.0sp" />
                <TextView
                    android:layout_gravity="top"
                    android:id="@id/wazan"
                    android:layout_weight="1"
                    android:layout_toEndOf="@id/meaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:layout_marginRight="15dp"
                    android:text="Word"


                    android:textSize= "16.0sp" />
                <TextView
                    android:layout_gravity="top"
                    android:id="@id/gendernumber"
                    android:layout_weight="1"
                    android:layout_toEndOf="@id/wazan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:layout_marginRight="15dp"
                    android:lines="1"
                    android:text="Word"

                    android:textSize= "16.0sp" />

                <TextView
                    android:layout_gravity="top"
                    android:id="@id/cases"
                    android:layout_weight="1"
                    android:layout_toEndOf="@id/gendernumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:layout_marginRight="15dp"
                    android:lines="1"
                    android:text="Word"

                    android:textSize= "16.0sp" />


                <TextView
                    android:layout_gravity="top"
                    android:id="@id/participles"
                    android:layout_weight="1"
                    android:layout_toEndOf="@id/cases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:layout_marginLeft="15dp"
                    android:lines="1"
                    android:text="Word"

                    android:textSize= "16.0sp" />
                <ImageView
                    android:id="@+id/more"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/participles"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_more"
                    />
                <TextView
                    android:layout_gravity="top"
                    android:id="@id/ayah"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_below="@id/chapterverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"




                    android:textSize= "16.0sp" />

                <com.example.utility.FlowLayout
                    android:id="@+id/flow_word_by_word"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/chapterverse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />
                <TextView
                    android:layout_gravity="top"
                    android:id="@id/translation"
                    android:layout_below="@+id/flow_word_by_word"
                    android:layout_weight="1"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"




                    android:textSize= "16.0sp" />


            </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>