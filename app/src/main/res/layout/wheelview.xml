<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:paddingLeft="8.0dip"
    android:paddingTop="@dimen/space_3"
    android:paddingRight="8.0dip"
    android:paddingBottom="@dimen/space_3"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="start"
            android:id="@id/etSuraSelected"
            android:layout_width="0.0dip"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_margin="4.0dip"

            android:layout_weight="60.0" />

        <TextView
            android:layout_gravity="end"
            android:id="@id/etAyahSelected"
            android:textSize="30sp"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="4.0dip"
            android:textColor="@color/black"

            android:layout_weight="20.0"
            android:inputType="number"
            android:imeOptions="actionGo|flagNoFullscreen" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_gravity="start"
            android:id="@id/etSura"
            android:layout_width="0.0dip"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_margin="4.0dip"
            android:hint="@string/quran_sura"
            android:layout_weight="60.0" />

        <EditText
            android:layout_gravity="end"
            android:id="@id/etAyah"
            android:textSize="30sp"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="4.0dip"
            android:textColor="@color/black"
            android:hint="@string/quran_ayah"
            android:layout_weight="20.0"
            android:inputType="number"
            android:imeOptions="actionGo|flagNoFullscreen" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"

        android:paddingTop="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <NumberPicker
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:contextClickable="true"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:id="@id/surahpicker"

            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginEnd="8.0dip"
            android:layout_weight="60.0" />

        <NumberPicker
            android:scaleX="1.5"
            android:scaleY="1.5"

            android:textColor="@color/black"
            android:layout_gravity="end"
            android:id="@id/ayahpicker"
            android:layout_width="0.0dip"
           android:contextClickable="true"
            android:layout_height="fill_parent"
            android:layout_marginEnd="4.0dip"
            android:layout_weight="20.0" />
    </LinearLayout>
</LinearLayout>