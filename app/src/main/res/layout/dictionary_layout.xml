<?xml version="1.0" encoding="utf-8"?>
<org.sj.conjugator.utilities.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="true"
    android:isScrollContainer="true"
    android:singleLine="true"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="vertical">



<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/grammar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"

            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">
<!--  android:background="@color/background_color_light_darkBlue"  -->

            <LinearLayout
                android:id="@id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"



                android:gravity="center_horizontal"
                android:orientation="vertical">



                <TextView
                    android:id="@id/rootward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:textDirection="ltr"




                    android:textSize="24.0sp" />


                <com.example.mushafconsolidated.Adapters.TweakedWebView
                    android:id="@id/wordDictionary"
                    android:paddingStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:textDirection="ltr"
                    android:lineSpacingExtra="10dp"



                    android:textSize="24.0sp" />

                <TextView
                    android:id="@id/wordDictionaryUrdu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:textDirection="rtl"




                    android:textSize="24.0sp" />







            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



    </RelativeLayout>




</org.sj.conjugator.utilities.ZoomLayout>