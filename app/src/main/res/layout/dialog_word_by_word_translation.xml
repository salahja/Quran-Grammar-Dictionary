<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/bottomSheetView"
    android:layout_width="fill_parent"
    android:layout_gravity="bottom"

    android:layout_height="match_parent">



    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
           />
    <TextView
        android:id="@id/surahinfo"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="?attr/colorPrimary"

        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"

        android:textSize="20.0sp" />

    <ImageView
        android:id="@id/dismissView"
        android:layout_width="33dp"
        android:layout_height="40dp"
        android:clickable="true"

        android:layout_alignBottom="@id/surahinfo"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="251dp"
        android:layout_marginBottom="-2dp"
        android:contentDescription="@null"
        android:padding="10.0dip"


        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/wordByWordRecyclerView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surahinfo"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-1dp"
        android:src="@drawable/ic_close_foreground"
        android:visibility="visible" />

</RelativeLayout>