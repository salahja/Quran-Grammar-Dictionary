<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/textViewMargin"
    android:layout_marginRight="@dimen/textViewMargin"
    android:gravity="center_horizontal"
    android:id="@+id/chips_group"
    android:orientation="vertical"
    android:padding="@dimen/textViewPadding">

    <TextView
        android:id="@+id/word_arabic_textView"

         android:visibility="visible"
        android:text="Word"
        android:checkable="true"
        android:layout_width="match_parent"


        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/root_word"

        android:visibility="gone"

        android:checkable="true"
        android:layout_width="match_parent"


        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wordno"

        android:visibility="gone"

        android:checkable="true"
        android:layout_width="match_parent"


        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/word_trans_textView"
        android:text="notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

    >

    </TextView>





</LinearLayout>

