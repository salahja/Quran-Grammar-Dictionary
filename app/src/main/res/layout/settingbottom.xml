<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingbottom"
    android:layout_width="match_parent"

    android:layout_height="50dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"

 >


    <com.google.android.material.chip.Chip
        android:id="@+id/Mufradat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
        android:layout_marginBottom="680dp"
        android:text="Mufradat"
        android:elevation="10dp"
        app:chipCornerRadius="15dp"
        app:chipBackgroundColor="@color/bg_chip_state_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:chipIcon="@drawable/ic_baseline_library_books_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/settingnav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
 android:gravity="center_horizontal"
        app:chipBackgroundColor="@color/bg_chip_state_list"
        android:layout_marginBottom="680dp"
        android:elevation="10dp"
        app:chipCornerRadius="15dp"


        android:layout_toEndOf="@+id/Mufradat"
        android:text="Settings"
        app:chipIcon="@drawable/ic_action_setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/bookmarksnav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipBackgroundColor="@color/bg_chip_state_list"
        android:elevation="10dp"
        app:chipCornerRadius="15dp"

        android:textStyle="bold"
        app:chipIcon="@drawable/ic_brightness"
        style="@style/Widget.MaterialComponents.Chip.Action"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="680dp"
        android:layout_toEndOf="@id/settingnav"
        android:layout_alignParentEnd="true"

        android:text="BookMarks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>