<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/searchViewRoot"

    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/toolbar_height"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@id/searchView"
        android:background="@drawable/search_box_bg"
        android:paddingTop="8.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10.0dip"
        android:hint="@string/search_with_dots"
        android:maxLines="1"
        android:lines="1"
        android:layout_centerInParent="true"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:imeActionLabel="@string/id_tab_search"
        android:paddingStart="55.0dip"
        android:paddingEnd="40.0dip" />

    <ImageView
        android:layout_width="25.0dip"
        android:layout_height="25.0dip"
        app:srcCompat="@drawable/ic_tab_search"
        android:tint="@color/tab_deselected_color"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:layout_marginEnd="10.0dip"
        android:layout_alignEnd="@id/searchView" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/clearAllContainer"
        android:background="@drawable/root_view_box_bg"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_margin="10.0dip"
        android:paddingStart="10.0dip"
        android:paddingEnd="10.0dip"
        android:layout_alignParentStart="true">

        <ImageView
            android:padding="3.5dip"
            android:layout_width="27.0dip"
            android:layout_height="27.0dip"
            app:srcCompat="@drawable/ic_cross_round"
            android:contentDescription="@null" />
    </LinearLayout>
</RelativeLayout>