<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/round"

    android:layout_height="100dp">


    <ImageView
        android:id="@+id/bookmark"
        android:layout_marginStart="10dp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_bookmark_add_36" />

    <ImageView
        android:id="@+id/gotobookmarks"
        android:layout_marginStart="40dp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_collections_bookmark_36" />

    <ImageView
        android:id="@+id/fileopen"
        android:layout_marginStart="40dp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_open_in_new_36" />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/colorized"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gramatical Colors"
        android:layout_marginStart="40dp"/>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sentences"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sentence Wise"
        android:layout_marginStart="40dp"/>



</LinearLayout>
