<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
     >


    <Button

        android:id="@+id/thulathibtn"
        style="@style/MyButton"

        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="20dp"


        android:layout_alignTop="@+id/firscardview"

        android:text="Thulathi"
        app:rippleColor="@color/colorAccent"
        app:strokeColor="@color/color_primary_variant"
         >

    </Button>

    <RelativeLayout
        android:id="@+id/firstrel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"

        android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/firscardview"
            android:layout_width="180dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:clipToPadding="false"
            android:dividerHeight="0.0px"
            app:cardCornerRadius="12dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            app:rippleColor="@color/colorAccent"
            app:strokeColor="@color/color_primary_variant"
            app:strokeWidth="1dp">

            <ListView
                android:id="@+id/thulathilist"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_below="@+id/thulathibtn"
                >

            </ListView>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/mazeedbtn"
            style="@style/MyButton"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:paddingBottom="20dp"
            android:layout_marginBottom="20dp"


            android:layout_below="@+id/firscardview"
            android:text="Mazeed"
            android:visibility="visible"

            app:rippleColor="@color/colorAccent"
            app:strokeColor="@color/color_primary_variant"
             >

        </Button>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/thulathiccard"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/firscardview"
            android:layout_margin="12dp"
            android:clipChildren="false"

            android:clipToPadding="false"
            android:dividerHeight="0.0px"
            app:cardCornerRadius="12dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            app:rippleColor="@color/colorAccent"
            app:strokeColor="@color/color_primary_variant"
            app:strokeWidth="1dp">

            <ListView
                android:id="@+id/mazeedlist"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_below="@id/mazeedbtn">

            </ListView>
        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/firstrel"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText"
            android:layout_width="180dp"
            android:layout_height="wrap_content"

            android:textColor="@color/colorPrimary"
            android:padding="5dp"
            android:paddingLeft="500dp"
            android:textSize="40sp" />

        <ru.dimorinny.floatingtextbutton.FloatingTextButton
            android:id="@+id/action_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText"
            android:layout_alignParentTop="@+id/editText"
            android:layout_gravity="start|bottom|center"
            android:layout_marginTop="277dp"

            android:background="?selectableItemBackground"
            android:foregroundGravity="bottom"

            app:floating_background_color="?colorPrimaryVariant"
            app:floating_left_icon="@drawable/baseline_history_black_48dp"


            app:floating_title="Back    "
            app:floating_title_color="@color/colorOnPrimary" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="bottom">

        <org.sj.verbs.sarf.CustomKeyboard.OvalCustomKeyboard
            android:id="@+id/arabic_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="visible" />

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
