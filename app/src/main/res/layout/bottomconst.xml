<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:rotationX="0"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <com.google.android.material.chip.Chip
        android:id="@+id/surahnav"
        style="@style/My_Widget.MaterialComponents.Chip.Choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"

        android:layout_marginTop="24dp"
        android:layout_weight="0"
        android:autoSizeMaxTextSize="25sp"
        android:autoSizeMinTextSize="17sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="none"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:text="Shart"
        app:chipCornerRadius="15dp"
        app:chipIcon="@drawable/ic_action_setting"
        app:layout_constraintStart_toEndOf="@+id/searchnav"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/searchnav"
        style="@style/My_Widget.MaterialComponents.Chip.Choice"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:autoSizeMaxTextSize="25sp"
        android:autoSizeMinTextSize="17sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="none"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:text="Sifa"
        app:chipCornerRadius="15dp"
        app:chipIcon="@drawable/ic_action_setting"
        app:layout_constraintBottom_toBottomOf="@+id/surahnav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/surahnav"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.chip.Chip
        android:id="@+id/conjugationnav"
        style="@style/My_Widget.MaterialComponents.Chip.Choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="0"
        android:autoSizeMaxTextSize="25sp"
        android:autoSizeMinTextSize="17sp"
        android:autoSizeStepGranularity="2sp"

        android:autoSizeTextType="none"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:text="@string/verb_conjugator"
        app:chipCornerRadius="15dp"
        app:chipIcon="@drawable/ic_action_setting"
        app:layout_constraintBottom_toBottomOf="@+id/surahnav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/surahnav"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.chip.Chip
        android:id="@+id/settingnav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:autoSizeMaxTextSize="25sp"
        android:autoSizeMinTextSize="17sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="none"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:text="Settings"
        app:chipCornerRadius="15dp"
        app:chipIcon="@drawable/ic_action_setting"
        app:layout_constraintBottom_toBottomOf="@+id/bookmarksnav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bookmarksnav"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.chip.Chip
        android:id="@+id/bookmarksnav"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"


        android:layout_marginBottom="1244dp"
        android:layout_weight="0"
        android:autoSizeMaxTextSize="25sp"
        android:autoSizeMinTextSize="17sp"
        android:autoSizeStepGranularity="2sp"


        android:autoSizeTextType="none"
        android:checkable="true"
        android:elevation="10dp"
        android:text="@string/bookmarks"
        android:textStyle="bold"
        app:chipCornerRadius="15dp"
        app:chipIcon="@drawable/ic_brightness"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/settingnav" />


</androidx.constraintlayout.widget.ConstraintLayout>