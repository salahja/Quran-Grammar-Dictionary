<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Final, top-level theme-->


    <style name="Theme.mushaf" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--Color-->
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">#033B67</item>
        <item name="colorPrimaryVariant">@color/CornflowerBlue</item>

        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">#cf3b3b</item>
        <item name="colorSecondaryVariant">@color/Magenta</item>
        <item name="colorOnSecondary">@color/mushaf_black_900</item>

        <item name="android:colorBackground">@color/reply_black_800</item>
        <item name="colorSurface">@color/reply_black_800</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorSurface</item>
        <!--suppress AndroidDomInspection -->


        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/mushaf_red_200</item>
        <item name="colorCardBackground">@color/blackT87</item>
        <item name="colorCardHighlight">@color/grey900</item>





        <item name="colorOnError">@color/mushaf_white_50</item>

        <item name="scrimBackground">@color/mushaf_black_900_alpha_087</item>
        <item name="android:statusBarColor">@color/reply_black_800</item>

        <item name="elevationOverlayEnabled">true</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>



        <item name="android:navigationBarColor">@color/nav_bar</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.mushaf.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.mushaf.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.mushaf.LargeComponent</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.mushaf.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.mushaf.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.mushaf.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.mushaf.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.mushaf.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.mushaf.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.mushaf.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.mushaf.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.mushaf.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.mushaf.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.mushaf.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.mushaf.Overline</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>


        <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar.PrimarySurface</item>

        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
        <item name="materialCardViewStyle">@style/SurahCardView</item>



    </style>


    <style name="SurahCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/bg_dark_blue</item>
    </style>


    <style name="Theme.mushaf.Cyan" parent="Theme.mushaf">

        <!--Color-->
        <item name="colorPrimary">@color/cyan_light</item>
        <item name="colorPrimaryVariant">@color/cyan_dark</item>
        <item name="colorSecondary">@color/Coral</item>
        <item name="colorSecondaryVariant">@color/DarkOrange</item>
        <item name="backgroundColorLight">@color/background_color_light_darkBlue</item>

        <item name="android:colorBackground">@color/mushaf_black_900</item>
        <item name="colorSurface">@color/reply_black_800</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorSurface</item>
        <item name="colorError">@color/mushaf_red_200</item>

        <item name="colorOnPrimary">@color/mushaf_black_900</item>
        <item name="colorOnSecondary">@color/mushaf_black_900</item>
        <item name="colorOnBackground">@color/mushaf_white_50</item>
        <item name="colorOnSurface">@color/mushaf_white_50</item>
        <item name="colorOnError">@color/mushaf_white_50</item>

        <item name="scrimBackground">@color/mushaf_black_900_alpha_087</item>


        <item name="elevationOverlayEnabled">true</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

    </style>




</resources>